<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Tasks</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="mystyles.css" />
  </head>
  <body>
    <div class="container-fluid page-container">
      <div class="row">
        <!-- Sidebar Section -->
        <div class="col-auto p-0 sidebar"><%- include('sidebar') %></div>
      </div>

      <!-- Main Content Section -->
      <div class="col col-md-5 col-lg-7 col-xl-10 main-content">
        <!-- My Tasks Header -->
        <%- include('mytasksheader') %>

        <div class="row mt-4">
          <table class="table table-striped table-hover">
            <thead>
              <tr class="table-success">
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Created on</th>
                <th scope="col">Due by</th>
                <th scope="col">Completed on</th>
                <th scope="col">Category</th>
                <th scope="col">Priority</th>
                <th scope="col">Status</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
              <% var count = 0; %> <% task.forEach((row) => { %>
              <tr>
                <th scope="row"><%= count ++; %></th>
                <td><%= row.task_name %></td>
                <td><%= row.task_description %></td>
                <td>TODO</td>
                <td><%= row.task_due_date %></td>
                <td>TODO</td>
                <td><%= row.category_name %></td>
                <td><%= row.priority_name %></td>
                <td><%= row.status_name %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <script src="/scripts/edittask.js"></script>
    <script src="/scripts/sidebar.js"></script>
  </body>
</html>
